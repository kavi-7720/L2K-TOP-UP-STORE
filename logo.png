body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background: url("l2k-background.jpg") no-repeat center center fixed;
  background-size: cover;
  position: relative;
  color: white;
}

/* Dark overlay */
body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); /* Dark layer */
  z-index: -1;
}